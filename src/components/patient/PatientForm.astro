---
interface Props {
  patient?: {
    id?: string;
    name: string;
    birthDate: string;
    gender: string;
  };
  isEditing?: boolean;
}

const { patient = { name: '', birthDate: '', gender: '' }, isEditing = false } = Astro.props;
---

<form class="space-y-4">
  <div class="form-control">
    <label class="label">
      <span class="label-text">Nombre Completo</span>
    </label>
    <input 
      type="text" 
      name="name" 
      value={patient.name}
      placeholder="Nombre del paciente" 
      class="input input-bordered w-full"
      required
    />
  </div>

  <div class="form-control">
    <label class="label">
      <span class="label-text">Fecha de Nacimiento</span>
    </label>
    <input 
      type="date" 
      name="birthDate" 
      value={patient.birthDate}
      class="input input-bordered w-full"
      required
    />
  </div>

  <div class="form-control">
    <label class="label">
      <span class="label-text">Género</span>
    </label>
    <select 
      name="gender" 
      class="select select-bordered w-full"
      required
    >
      <option value="" disabled selected>Seleccione un género</option>
      <option value="male" selected={patient.gender === 'male'}>Masculino</option>
      <option value="female" selected={patient.gender === 'female'}>Femenino</option>
      <option value="other" selected={patient.gender === 'other'}>Otro</option>
    </select>
  </div>

  <div class="form-control mt-6">
    <button type="submit" class="btn btn-primary">
      {isEditing ? 'Actualizar Paciente' : 'Crear Paciente'}
    </button>
  </div>
</form>
