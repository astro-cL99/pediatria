---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Inicio - PediFlow Chile">
  <div class="hero min-h-screen bg-base-200">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="text-5xl font-bold">Bienvenido a PediFlow Chile</h1>
        <p class="py-6">Sistema de gestión de pacientes pediátricos con integración FHIR</p>
        <div class="flex gap-4 justify-center">
          <a href="/patients" class="btn btn-primary">Ver Pacientes</a>
          <a href="#features" class="btn btn-outline">Más información</a>
        </div>
      </div>
    </div>
  </div>

  <section id="features" class="py-16 px-4">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-3xl font-bold text-center mb-12">Características Principales</h2>
      
      <div class="grid md:grid-cols-3 gap-8">
        <!-- Feature 1 -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body items-center text-center">
            <div class="text-4xl mb-4">
              <i class="fas fa-user-md"></i>
            </div>
            <h3 class="card-title">Gestión de Pacientes</h3>
            <p>Administra la información de tus pacientes de manera eficiente y segura.</p>
          </div>
        </div>
        
        <!-- Feature 2 -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body items-center text-center">
            <div class="text-4xl mb-4">
              <i class="fas fa-heartbeat"></i>
            </div>
            <h3 class="card-title">Registro de Signos Vitales</h3>
            <p>Registra y monitorea los signos vitales de tus pacientes.</p>
          </div>
        </div>
        
        <!-- Feature 3 -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body items-center text-center">
            <div class="text-4xl mb-4">
              <i class="fas fa-exchange-alt"></i>
            </div>
            <h3 class="card-title">Integración FHIR</h3>
            <p>Interoperabilidad con sistemas de salud a través del estándar FHIR.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
